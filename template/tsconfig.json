{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "outDir": "out",
    "lib": [
      "es6"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": false,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    ".vscode-test"
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./typings"
  ],
  "include": [
    "./src/extension.ts",
    "./src/node/**/*"
  ]
}
